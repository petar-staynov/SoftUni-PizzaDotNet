@model PizzaDotNet.Web.ViewModels.Administration.Categories.AdminCategoriesViewModel
@{
    this.ViewData["Title"] = "Title";

    var sortingCriteriasListItems =
        Model.SortingCriteriaList.Select(x => new SelectListItem(x.Description, x.Name));
}
<div>
    <form method="post">
        <div class="form-inline">
            <div class="form-group mb-2">
                <label asp-for="@Model.SortingCriteria"></label>
            </div>
            <div class="form-group mx-sm-3">
                <select asp-for="@Model.SortingCriteria" asp-items="@sortingCriteriasListItems" class="form-control"></select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Sort" class="btn btn-outline-secondary"/>
            </div>
        </div>
    </form>

    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Products</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.ProductsCount</td>
                <td>
                    <a type="button" class="btn btn-success btn-sm"
                       asp-area="Administration" asp-controller="Categories" asp-action="View" asp-route-categoryId="@category.Id">
                        View
                    </a>
                    <a type="button" class="btn btn-warning btn-sm"
                       asp-area="Administration" asp-controller="Categories" asp-action="Edit" asp-route-categoryId="@category.Id">
                        Edit
                    </a>
                    <a type="button" class="btn btn-danger btn-sm"
                       asp-area="Administration" asp-controller="Categories" asp-action="Delete" asp-route-categoryId="@category.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
        <hr/>
        <div class="text-center">
            <a type="button" class="btn btn-outline-secondary"
               asp-area="Administration" asp-controller="Categories" asp-action="All">
                Go back
            </a>
        </div>
    </table>
</div>