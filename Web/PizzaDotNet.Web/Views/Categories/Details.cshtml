@model PizzaDotNet.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
    <p>@Model.Description</p>
    <hr/>
    @foreach (var product in Model.Products)
    {
        <p>@product.Name</p>
    }
</div>